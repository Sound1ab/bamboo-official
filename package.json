{
  "name": "BamBoo",
  "description": "The official repo for Bam Boo restaurant and retailer",
  "version": "1.0.0",
  "private": true,
  "author": "Phillip Parker <info@phillipparker.io>",
  "keywords": [
    "BamBoo"
  ],
  "license": "MIT",
  "main": "n/a",
  "scripts": {
    "build": "gatsby build",
    "clean": "rimraf public",
    "deploy": "gatsby build --prefix-paths && gh-pages -d public",
    "start": "gatsby develop",
    "lint": "tslint 'src/**/*.{ts,tsx}' --project tsconfig.json --format stylish",
    "lint:watch": "chokidar src/**/*.{ts,tsx} -c \"yarn lint\" --initial --verbose",
    "test": "jest --watchAll",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "babel-plugin-styled-components": "^1.5.1",
    "classnames": "^2.2.6",
    "emotion": "^9.2.8",
    "emotion-server": "^9.2.8",
    "emotion-theming": "^9.2.6",
    "gatsby": "^2.0.0-rc.25",
    "gatsby-image": "^2.0.0-rc.1",
    "gatsby-plugin-canonical-urls": "^2.0.0-rc.1",
    "gatsby-plugin-emotion": "^2.0.0-rc.1",
    "gatsby-plugin-react-helmet": "^3.0.0-rc.1",
    "gatsby-plugin-sharp": "^2.0.0-rc.3",
    "gatsby-plugin-typescript": "^2.0.0-rc.3",
    "gatsby-remark-copy-linked-files": "^2.0.0-rc.1",
    "gatsby-remark-images": "^2.0.1-rc.1",
    "gatsby-remark-prismjs": "^3.0.0-rc.2",
    "gatsby-remark-responsive-iframe": "^2.0.0-rc.1",
    "gatsby-remark-smartypants": "^2.0.0-rc.1",
    "gatsby-source-filesystem": "^2.0.1-rc.1",
    "gatsby-transformer-json": "^2.1.1-rc.1",
    "gatsby-transformer-remark": "^2.1.1-rc.1",
    "gatsby-transformer-sharp": "^2.1.1-rc.2",
    "modern-normalize": "^0.5.0",
    "normalize.css": "^8.0.0",
    "polished": "^1.9.3",
    "prism-themes": "^1.0.1",
    "prismjs": "^1.15.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-emotion": "^9.2.8",
    "react-helmet": "^5.2.0",
    "typescript": "^3.0.3"
  },
  "devDependencies": {
    "@storybook/addon-info": "^3.4.10",
    "@storybook/addon-storyshots": "^3.4.10",
    "@storybook/react": "4.0.0-alpha.3",
    "@types/classnames": "^2.2.6",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.7.1",
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "@types/react-helmet": "^5.0.7",
    "@types/react-test-renderer": "^16.0.2",
    "@types/storybook__react": "^3.0.9",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^6.26.3",
    "chokidar": "^2.0.4",
    "chokidar-cli": "^1.2.1",
    "gh-pages": "^1.2.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.6.0",
    "jest-emotion": "^9.2.7",
    "prettier": "^1.14.2",
    "pretty-quick": "^1.6.0",
    "react-test-renderer": "^16.5.1",
    "react-testing-library": "^5.0.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.4",
    "ts-loader": "^5.1.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-blvd": "^1.1.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "printWidth": 140,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "((\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "snapshotSerializers": [
      "jest-emotion/serializer"
    ]
  }
}
